<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConvocatoriaActivity">

    <android.support.v7.widget.CardView

        android:id="@+id/publish_dialog_convocatoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginTop="@dimen/md_keylines"
        android:background="#ffffff">


        <RelativeLayout
            android:id="@+id/activity_convocatoria_publish"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:onClick="onClick">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/keylines"
                android:layout_marginTop="@dimen/md_keylines"
                android:background="@android:color/transparent"
                android:hint="Subir Documento"
                android:textColorHint="#ced5db"
                android:textSize="18sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/md_keylines"
                android:layout_marginTop="@dimen/md_keylines"
                android:text="Subir"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/md_keylines"
                android:tint="#d9d9d9" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_convocatoria"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_convocatoria">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>