<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/keylines">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/keylines">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/md_keylines">


                <TextView
                    android:id="@+id/dialog_convocatoria_cerrar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/square"
                    android:gravity="center_vertical|center_horizontal"
                    android:text=" X "
                    android:textSize="12sp" />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/md_keylines"
                android:layout_marginStart="@dimen/md_keylines"
                android:text="Pon la fecha limite de la convocatoria" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/keylines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/dialog_convocatoria_edtx_fecha"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date"
                    android:hint="@string/formato_fecha"
                    android:layout_marginStart="8dp"/>

                <ImageButton
                    android:id="@+id/dialog_convocatoria_btn_fecha"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_event_white_24dp"
                    android:layout_marginEnd="@dimen/keylines"
                    android:layout_marginStart="@dimen/keylines"
                    tools:ignore="ContentDescription" />

            </LinearLayout>


            <!--

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/md_keylines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/et_mostrar_hora_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="time"
                    android:layout_weight="1"
                    android:hint="@string/formato_hora"
                    android:layout_marginStart="8dp"/>


                <ImageButton
                    android:id="@+id/ib_obtener_hora"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/keylines"
                    android:layout_marginStart="@dimen/keylines"
                    android:src="@drawable/ic_access_time_white_24dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

-->


            <EditText

                android:id="@+id/dialog_convocatoria_edtx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top"
                android:hint="Escribe algo ..."
                android:minHeight="80dp"
                android:padding="@dimen/md_keylines"
                android:textColor="@color/colorAccent" />





            <RelativeLayout
                android:id="@+id/layout_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="386dp">

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_post_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/keylines"
                    android:adjustViewBounds="true"
                    android:maxHeight="140dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/pdf" />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/add_photo_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keylines"
                    android:src="@drawable/camera"
                    android:tint="@color/colorAccent" />


                <TextView
                    android:id="@+id/dialog_convocatoria_btn_publicar"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/keylines"
                    android:layout_marginEnd="@dimen/keylines"
                    android:layout_marginStart="@dimen/md_keylines"
                    android:layout_marginTop="@dimen/keylines"
                    android:background="@drawable/square"
                    android:padding="8dp"
                    android:text="Publicar"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</android.support.v7.widget.CardView>


