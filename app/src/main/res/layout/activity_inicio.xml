<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboar_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context="com.divaga.tecnologico.DetailActivity">

        <RelativeLayout
            android:id="@+id/dashboar_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dashboar_head_imagen"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/food_1"
                android:contentDescription="@string/dashboar_head_imagen_description" />

            <View
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/gradient_up" />

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/dashboar_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/dashboar_head"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-28dp"


            app:backgroundTint="@color/cardview_shadow_start_color"
            app:srcCompat="@mipmap/tecnologico" />

        <TextView
            android:id="@+id/dashboar_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:text="@string/dashboar_user"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dashboar_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dashboar_user"
            android:text="@string/dashboar_email"
            android:textAlignment="center"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/dashboar_linearlayout_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="ExtraText">
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/dashboar_btn_1"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:src="@drawable/fui_ic_phone_white_24dp"  />


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/dashboar_btn_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:src="@drawable/fui_ic_twitter_bird_white_24dp"/>
                />
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/dashboar_btn_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:src="@drawable/fui_ic_mail_white_24dp" />
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dashboar_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/dashboar_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/dashboar_text_dashboar_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/dashboar_btn_4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:src="@drawable/fui_ic_twitter_bird_white_24dp" />
                />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/dashboar_btn_5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:src="@drawable/fui_ic_phone_white_24dp" />
                />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/dashboar_btn_6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:src="@drawable/fui_ic_github_white_24dp" />
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dashboar_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/dashboar_text_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/dashboar_text_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/dashboar_btn_7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:src="@drawable/fui_ic_mail_white_24dp" />
                />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/dashboar_btn_8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:src="@drawable/fui_ic_twitter_bird_white_24dp" />
                />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/dashboar_btn_9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="onClick"
                    android:padding="15dp"
                    android:src="@drawable/fui_ic_mail_white_24dp" />
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dashboar_text_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/dashboar_text_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/dashboar_text_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cerrar"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>


        <android.support.constraint.ConstraintLayout

            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/publicacion_item_md_keylines"
            android:layout_below="@+id/dashboar_linearlayout_group"
            android:layout_height="match_parent"
            tools:context=".InicioActivity">



            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_publicaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                tools:listitem="@layout/item_publicacion" />


        </android.support.constraint.ConstraintLayout>


    </RelativeLayout>


</ScrollView>
