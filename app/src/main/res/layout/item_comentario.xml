<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_comentario_imagen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/facebook_avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


            <TextView
                android:id="@+id/comentario_item_username"
                style="@style/AppTheme.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greySecondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="120dp"
                android:layout_alignParentLeft="true"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/comentario_item_divider"
                style="@style/AppTheme.TextDivider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/comentario_item_username"
                android:text="@string/divider_bullet" />

            <TextView
                android:id="@+id/comentario_item_date"
                style="@style/AppTheme.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greySecondary"
                android:layout_toRightOf="@+id/comentario_item_divider"
                tools:text="9/27/2017" />

            <TextView
                android:id="@+id/comentario_item_text"
                style="@style/AppTheme.Subheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comentario_item_username"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/greyPrimary"
                tools:text="I thought it was pretty great! And I really have a ton to say wow." />

            <View
                style="@style/AppTheme.Divider"
                android:layout_below="@id/comentario_item_text"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>


    </RelativeLayout>

</LinearLayout>




